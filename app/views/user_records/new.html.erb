<div class="container">
  <form data-username="<%= @username %>" data-collection-name="<%= @collection_name %>" data-collection-id="<%= @collection_id %>">
    <ul class="errors"></ul>
    <div class="form-group">
      <label for="image">Image</label>
      <input id="image" class="form-control" type="file" accept="image/*" placeholder="image" aria-label="image">
    </div>
    <div class="form-group">
      <label for="caption">Caption</label>
      <input name="caption" id="caption" class="form-control" type="text" placeholder="caption" aria-label="caption">
    </div>
    <div class="form-group">
      <label for="body">Body</label>
      <textarea name="body" id="body" cols="30" rows="10"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" id="save" class="btn btn-primary">Create</button>
      <button id="cancel" class="btn btn-secondary">Cancel</button>
    </div>
  </form>
</div>
